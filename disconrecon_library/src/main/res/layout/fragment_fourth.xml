<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lin_main"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp50"
            android:orientation="horizontal"
            android:padding="@dimen/dp20">

            <Button
                android:id="@+id/bt_reconnection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:layout_weight="1"
                android:background="#85929E"
                android:drawableTop="@drawable/reconmemo"
                android:padding="@dimen/dp10"
                android:text="Recon Memo"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/bt_printer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:layout_weight="1"
                android:background="#85929E"
                android:drawableTop="@drawable/reconprint"
                android:padding="@dimen/dp10"
                android:text=" Recon Printer"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>